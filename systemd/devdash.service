After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=samuel
WorkingDirectory=/home/samuel/devdash
Environment=SDL_FBDEV=/dev/fb0
Environment=SDL_VIDEODRIVER=fbcon
ExecStart=/home/samuel/devdash/.venv/bin/python -m devdash
Restart=always
RestartSec=5
